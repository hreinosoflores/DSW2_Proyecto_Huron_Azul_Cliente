@model IEnumerable<DSW2_Proyecto_Huron_Azul.localhost.BeanProducto>
@Html.ActionLink("Agregar Nuevo Producto", "Registrar", "Producto")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FOTOPROD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CODPROD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCPROD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PREPROD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STKPROD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATPROD)
        </th>

        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="imagen" src="@Url.Content(string.Format("~/imagenes/productos/{0}",item.FOTOPROD.ToLower()))" alt="Imagen no disponible" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODPROD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCPROD)
            </td>
            <td>
                S/.@decimal.Parse(item.PREPROD).ToString("F")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STKPROD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATPROD)
            </td>

            <td>
                @Html.ActionLink("Editar Datos", "Editar", "Producto", new { codprod = item.CODPROD }, null) |
                @Html.ActionLink("Inactivar", "Inactivar", "Producto", new { codprod = item.CODPROD }, null)
            </td>
        </tr>
    }

</table>





