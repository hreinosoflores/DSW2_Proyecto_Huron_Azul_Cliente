@model DSW2_Proyecto_Huron_Azul.localhost.BeanCita
@{
    ViewBag.Title = "Proceso de solicitud de cita";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CLIENTE)

        <div class="form-group">
            @Html.LabelFor(model => model.SEDE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SEDE, (SelectList)ViewBag.sedes)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Seleccione fecha de cita", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="fecha" />
                @Html.DropDownList("hora", (SelectList)ViewBag.horas)
            </div>

        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.LUGARATENCION, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.LUGARATENCION, "1", new { @class = "form-check-input", @checked = true })
                    @Html.Label("En la sede", new { @class = "form-check-label" })
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.LUGARATENCION, "2", new { @class = "form-check-input" })
                    @Html.Label("A domicilio", new { @class = "form-check-label" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="REGISTRAR CITA" class="btn btn-default" />
            </div>
        </div>


    </div>
}
